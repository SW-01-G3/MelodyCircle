@page
@using MelodyCircle.ExtensionMethods
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model RegisterModel
@{
	ViewData["Title"] = @Html.Translate("LB_REGISTER");
}

@* <h1>@ViewData["Title"]</h1> *@

<div class="row">
	<div class="col-md-4 mx-auto">
		<section class="border border-purple bg-white text-dark p-2 p-sm-2 p-md-3 p-lg-5 rounded-3">
		<form id="registerForm" class="bg-lightPurple p-2 p-sm-2 p-md-3 p-lg-5 rounded-3" asp-route-returnUrl="@Model.ReturnUrl" method="post">
			<div class="text-end">
				<button type="button" class="btn btn-sm bg-darkPurple text-white rounded-circle" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-html="true"
							title="<p>@Html.Translate("TT_REGISTER")</p>">
					?
				</button>
			</div>
				<h2 class="text-dark text-center">@Html.Translate("LB_REGISTER")</h2>
			<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
			<div class="mb-3 text-center">
					<label asp-for="Input.Email" class="text-dark fs-md-4 fs-lg-3">Email</label>
				<input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="nome@email.com"/>
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div class="mb-3 text-center">
					<label asp-for="Input.UserName" class="text-dark fs-md-4 fs-lg-3">@Html.Translate("LB_USERNAME")</label>
				<input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="iamuser123"/>
				<span asp-validation-for="Input.UserName" class="text-danger"></span>
			</div>
			<div class="mb-3 text-center">
					<label asp-for="Input.Name" class="text-dark fs-md-4 fs-lg-3">@Html.Translate("LB_NAME")</label>
					<input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" placeholder="@Html.Translate("LB_NAME")" />
				<span asp-validation-for="Input.Name" class="text-danger"></span>
			</div>
			<div class="mb-3 text-center">
					<label asp-for="Input.BirthDate" class="text-dark fs-md-4 fs-lg-3">@Html.Translate("LB_BIRTHDATE")</label>
				<input asp-for="Input.BirthDate" class="form-control" autocomplete="on" aria-required="true"/>
				<span asp-validation-for="Input.BirthDate" class="text-danger"></span>
			</div>
			<div class="mb-3 text-center">
				<label asp-for="Input.Password" class="text-dark fs-md-4 fs-lg-3">@Html.Translate("LB_PASSWORD")</label>
					<input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="@Html.Translate("LB_PASSWORD")" />
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<div class="mb-3 text-center">
					<label asp-for="Input.ConfirmPassword" class="text-dark fs-md-4 fs-lg-3">@Html.Translate("LB_CONFIRMPASSWORD")</label>
					<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="@Html.Translate("LB_PASSWORD")" />
				<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>
			<button id="registerSubmit" type="submit" class="w-100 btn btn-lg bg-purple text-white">@Html.Translate("LB_REGISTER")</button>
		</form>
		</section>
	</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}