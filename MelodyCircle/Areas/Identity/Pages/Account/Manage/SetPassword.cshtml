@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Definir Palavra-passe";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<section class="bg-lightPurple p-2 p-sm-2 p-md-3 p-lg-5 rounded-3">
    <h3 class="text-white">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
    <p class="text-info text-white ">
        Você não possui um nome de usuário/senha local para este site. Adicione uma conta local para poder fazer login sem um login externo.
</p>

    <div class="col-md-6" >
        <form id="set-password-form"  method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-3 text-center">
                <label asp-for="Input.NewPassword" class="form-label text-white fs-md-4 fs-lg-3">Nova Palavra-passe</label>
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Nova Palavra-passe" />
                 <span asp-validation-for="Input.NewPassword" class="bg-danger text-white"></span>
            </div>
            <div class="mb-3 text-center">
                <label asp-for="Input.ConfirmPassword" class="form-label text-white fs-md-4 fs-lg-3">Confirmação da nova Palavra-passe</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirmação da nova Palavra-passe" />
                <span asp-validation-for="Input.ConfirmPassword" class="bg-danger text-white"></span>
            </div>
                <button type="submit" class="w-100 mt-2 btn btn-lg bg-purple text-white">Confirmar</button>
        </form>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
