@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>Perfil</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <!-- <div class="form-floating mb-3">
	            <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
	            <label asp-for="Username" class="form-label"></label>
            </div>-->
            <div class=" mb-3">
                <label asp-for="Input.Name" class="form-label text-black fs-md-4 fs-lg-3"></label>
                <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" placeholder="Nome de Perfil" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
@*             <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div> *@
			<div class=" mb-3">
                <label asp-for="Input.BirthDate" class="form-label text-black fs-md-4 fs-lg-3" ></label>
                <input asp-for="Input.BirthDate" class="form-label " autocomplete="birth-date" aria-required="true" placeholder="Data de Nascimento" />
				<span asp-validation-for="Input.BirthDate" class="text-danger"></span>
			</div>
            <div class=" mb-3">
                <label asp-for="Input.Locality" class="form-label text-black fs-md-4 fs-lg-3"></label>
                <input asp-for="Input.Locality" class="form-control" autocomplete="name" aria-required="true" placeholder="Localidade" />
                <span asp-validation-for="Input.Locality" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <div>
                    <label>Género:</label>
                    <label for="gender-male">M</label><input type="radio"  asp-for="Input.Gender" value="Male" id="gender-male" />
                    <label for="gender-female">F</label><input type="radio"   asp-for="Input.Gender" value="Female" id="gender-female" />
                    <label for="gender-other">Outro</label><input type="radio" asp-for="Input.Gender" value="Other" id="gender-other" />
                </div>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 mt-2 btn bg-purple text-white">Guardar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
