@page
@using MelodyCircle.ExtensionMethods
@model ChangePasswordModel
@{
    ViewData["Title"] = @Html.Translate("LB_CHANGEPASS");
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4 class="text-black ">@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />

    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-3">
            <label asp-for="Input.OldPassword" class="form-label text-black fs-md-4 fs-lg-3">@Html.Translate("LB_OLDPASSWORD")</label>
            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="@Html.Translate("LB_OLDPASSWORD")" />
                <span asp-validation-for="Input.OldPassword" class="bg-danger text-white"></span>
            </div>
             <div class="mb-3">
            <label asp-for="Input.NewPassword" class="form-label text-black fs-md-4 fs-lg-3">@Html.Translate("LB_NEWPASSWORD")</label>
            <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="@Html.Translate("LB_NEWPASSWORD")" />
                <span asp-validation-for="Input.NewPassword" class="bg-danger text-white"></span>
            </div>
            <div class="mb-3">
            <label asp-for="Input.ConfirmPassword" class="form-label text-black fs-md-4 fs-lg-3">@Html.Translate("LB_CONFIRMNEWPASSWORD")</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="@Html.Translate("LB_CONFIRMNEWPASSWORD")" />
                <span asp-validation-for="Input.ConfirmPassword" class="bg-danger text-white"></span>
            </div>
        <button type="submit" class="w-100 mt-2 btn bg-purple text-white">@Html.Translate("LB_CHANGEPASSWORD")</button>
        </form>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
