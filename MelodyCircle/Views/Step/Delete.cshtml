@using MelodyCircle.ExtensionMethods
@model MelodyCircle.Models.Step

@{
    ViewData["Title"] = @Html.Translate("LB_DELETESTEP");
}
<div class="row justify-content-center">
    <div class="col-7 bg-white text-center rounded-3 border border-purple">

    <form asp-action="DeleteConfirmed" asp-route-stepid="@Model.Id">
            <h4 class="mt-3">@Html.Translate("LB_CONFIRMSTEPDELETE")</h4>
            <div class="mb-3">
                <input type="submit" value="@Html.Translate("LB_YES")" class="btn btn-danger px-4 mx-2" />
                <a asp-action="Index" asp-controller="Step" asp-route-tutorialId="@Model.TutorialId" class="btn px-4 btn-primary mx-2">@Html.Translate("LB_NO")</a>
        </div>
    </form>
    </div>
</div>