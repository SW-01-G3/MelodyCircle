@model MelodyCircle.Models.Step

@{
    ViewData["Title"] = "Delete";
}
<div class="row justify-content-center">
    <div class="col-7 bg-white text-center rounded-3 border border-purple">

    <form asp-action="DeleteConfirmed" asp-route-stepid="@Model.Id">
            <h4 class="mt-3">Tem certeza que deseja apagar este passo?</h4>
            <div class="mb-3">
                <input type="submit" value="Sim" class="btn btn-danger px-4 mx-2" />
                <a asp-action="Index" asp-controller="Step" asp-route-tutorialId="@Model.TutorialId" class="btn px-4 btn-primary mx-2">Não</a>
        </div>
    </form>
    </div>
</div>