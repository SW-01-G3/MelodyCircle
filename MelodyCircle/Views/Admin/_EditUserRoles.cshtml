@model User

<h2>Edit User Roles: @Model.UserName</h2>

<form asp-action="EditUserRoles" asp-controller="Admin">
	<div class="form-group">
		<label asp-for="UserName" class="control-label"></label>
		<input type="hidden" name="userId" value="@Model.UserName" />
		<label for="selectedRole">Select Role:</label>
		<select class="form-control" id="selectedRole" name="selectedRole">
			<option value="Student">Student</option>
			<option value="Teacher">Teacher</option>
			<option value="Mod">Mod</option>
			<option value="Admin">Admin</option>
		</select>
		<button type="submit" class="btn btn-primary">Save</button>
		<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
	</div>
</form>