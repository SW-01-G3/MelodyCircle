@{
    ViewData["Title"] = "Finalizar Colaboração";
}

<div class="text-center border-purple bg-white p-5 mx-auto w-50  row d-flex justify-content-center align-items-center">
    <h1>@ViewData["Title"]</h1>
    
    <form method="post" action="@Url.Action("FinishConfirmed", "Collaboration", new { id = ViewBag.CollaborationId })">
        <h4 class="mt-3">Deseja dar como finalizada esta colaboração?</h4>
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger px-4 mx-2">Sim</button>
        <a asp-action="Index" asp-controller="Collaboration" class="btn px-4 btn-primary mx-2">Não</a>
    </form>
    
 </div>