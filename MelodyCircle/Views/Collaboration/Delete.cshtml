@model MelodyCircle.Models.Collaboration

@{
    ViewData["Title"] = "Eliminar Colaboração";
}

<h1>@ViewData["Title"]</h1>

<hr />

<h3>Tem certeza de que deseja eliminar esta colaboração?</h3>
<div>
    <h4>Detalhes da Colaboração:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-default">Cancelar</a>
        </div>
    </form>
</div>