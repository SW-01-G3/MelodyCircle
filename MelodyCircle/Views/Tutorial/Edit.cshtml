@model MelodyCircle.Models.Tutorial

@{
    ViewData["Title"] = "Editar Tutorial";
}

<div class="row justify-content-center">
    <div class="col-sm-6 bg-white rounded-3 border border-purple">
        <form asp-action="Edit">
            <div class="form-group text-center mt-3">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-center">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control border-purple" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control border-purple" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="Creator" class="control-label"></label>
                <input asp-for="Creator" class="form-control border-purple" />
                <span asp-validation-for="Creator" class="text-danger"></span>
            </div>
            <div class="form-group text-center my-3">
                <input type="submit" value="Adicionar" class="btn bg-purple text-white" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" asp-controller="Tutorial">Voltar à lista de Tutoriais</a>
</div>