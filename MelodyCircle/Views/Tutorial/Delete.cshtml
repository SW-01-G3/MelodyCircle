@using MelodyCircle.ExtensionMethods
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MelodyCircle.Models.Tutorial

@* Eduardo Andrade, Rodrigo Nogueira, Guilherme Bernardino *@

@{
    ViewData["Title"] = @Html.Translate("LB_DELETETUTO");
}

<div class="row justify-content-center">
    <div class="col-7 bg-white text-center rounded-3 border border-purple">
       <form method="post" class="text-center">
            <h4 class="mt-3">@Html.Translate("LB_CONFIRMTUTODELETE")</h4>
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <input type="submit" value="@Html.Translate("LB_YES")" class="btn btn-danger px-4 mx-2" />
                <a asp-action="Index" asp-controller="Tutorial" class="btn px-4 btn-primary mx-2 ">@Html.Translate("LB_NO")</a>
            </div>
        </form>
    </div>
</div>