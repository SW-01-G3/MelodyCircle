@model MelodyCircle.Models.Tutorial

@{
    ViewData["Title"] = "Confirmar Exclusão";
}

<div class="row justify-content-center">
    <div class="col-7 bg-white rounded-3 border border-purple">
       <form asp-action="Delete" method="post" class="text-center">
            <h4 class="mt-3">Tem certeza que deseja apagar este tutorial?</h4>
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <input type="submit" value="Sim" class="btn btn-danger px-4 mx-2" />
                <a asp-action="Index" asp-controller="Tutorial" class="btn px-4 btn-primary mx-2 ">Não</a>
            <div>
        </form>
    </div>
</div>