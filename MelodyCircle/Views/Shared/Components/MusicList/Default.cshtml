@model List<string>

<h2>Músicas Favoritas</h2>
<ul>
    @foreach (var music in Model)
    {
        <div style="display: flex; align-items: center; margin-bottom: 10px; position: relative;">
            <!-- Iframe da música -->
            <div style="flex-grow: 1;">
                <iframe style="border-radius: 12px;"
                        src="@music"
                        width="100%" height="152"
                        frameborder="0" allowfullscreen=""
                        allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy">
                </iframe>
            </div>

            <!-- Botões de ação -->
            <div style="margin-left: 10px;">
                <!-- Botão de remover -->
                <form asp-action="RemoveMusicCard" asp-route-uri="@music" method="post">
                    <button type="submit">Remover</button>
                </form>

                <!-- Botão de editar -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editMusicModal">
                    Editar
                </button>
            </div>
        </div>

        <!-- Modal de edição de música -->
        <div class="modal fade" id="editMusicModal" tabindex="-1" aria-labelledby="editMusicModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editMusicModalLabel">Editar Música</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form asp-action="EditMusicCard" asp-route-uri="@music" method="post">
                            <div class="mb-3">
                                <label for="newMusicUri" class="form-label">Novo URI da Música</label>
                                <input type="text" class="form-control" id="newMusicUri" name="newMusicUri" placeholder="Insira o novo URI da música">
                            </div>
                            <button type="submit" class="btn btn-primary">Salvar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</ul>