@model IEnumerable<UserRating>

@* Guilherme Bernardino, André Nunes *@

<h1>Ratings</h1>

@if (Model.Count() == 0)
{
    <p>No ratings available.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Rated By</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rating in Model)
            {
                <tr>
                    <td>@rating.UserName</td>
                    <td>@rating.Value</td>
                </tr>
            }
        </tbody>
    </table>
}